<% if current_user %>
  <h2 class="py-2">This is a home page of <span class="font-bold"><%= current_user.email %></span></h2>

  <h3 class="font-bold">Users:</h3>
  <ul>
    <% @users.each do |user| %>
      <ul>
        <%= link_to user.username, user_path(user) %>
      </ul>
    <% end %>
  </ul>
<% end %>

